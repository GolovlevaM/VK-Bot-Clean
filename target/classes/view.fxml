<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.vanishBot.Controller"
            prefHeight="400.0" prefWidth="300.0">

    <children>

    <Label layoutX="14.0" layoutY="14.0" text="Id странницы vk" />
    <Label layoutX="14.0" layoutY="44.0" text="Токен" />
    <Button fx:id="getTokenButton" layoutX="60.0" layoutY="40.0" mnemonicParsing="false" onAction="#getTokenAction" prefHeight="25.0" prefWidth="109.0" text="Получить токен" />
    <Button fx:id="savePropertyButton" layoutX="157.0" layoutY="340.0" mnemonicParsing="false" onAction="#savePropertyAction" text="Сохранить настройки" />
    <TextField fx:id="vkId" layoutX="114.0" layoutY="10.0" prefHeight="25.0" prefWidth="168.0" promptText="https://vk.com/(id/name)" />
    <TextField fx:id="token" layoutX="9.0" layoutY="75.0" prefHeight="25.0" prefWidth="283.0" promptText="сюда вписать ссылку из браузера" />
    <Button fx:id="startButton" layoutY="340.0" mnemonicParsing="false" onAction="#startAction" prefHeight="25.0" prefWidth="76.0" text="Старт" />
    <Button fx:id="stopButton" layoutX="77.0" layoutY="340.0" mnemonicParsing="false" onAction="#stopAction" prefHeight="25.0" prefWidth="76.0" text="Стоп" />
    <Accordion layoutX="8.0" layoutY="124.0" />
    <Accordion layoutX="14.0" layoutY="150.0" />
    <Label layoutX="14.0" layoutY="111.0" text="Id приложения" />
    <Label layoutX="13.0" layoutY="143.0" text="Сервисный ключ" />
    <TextField fx:id="idApp" layoutX="124.0" layoutY="111.0" prefHeight="25.0" prefWidth="168.0" />
    <TextField fx:id="serviceKey" layoutX="124.0" layoutY="143.0" prefHeight="25.0" prefWidth="168.0" />
    <RadioButton fx:id="cleanWall" layoutX="14.0" layoutY="178"/>
        <Label layoutX="45" layoutY="178" text="Очистить стену"/>
        <RadioButton fx:id="cleanPhoto" layoutX="14.0" layoutY="210"/>
        <Label layoutX="45" layoutY="210" text="Удалить фотографии"/>
        <RadioButton fx:id="goOutGroups" layoutX="14.0" layoutY="242"/>
        <Label layoutX="45" layoutY="242" text="Выйти из групп"/>
        <RadioButton fx:id="cleanMessages" layoutX="14.0" layoutY="275"/>
        <Label layoutX="45" layoutY="275" text="Удалить сообщения"/>
        <Label layoutX="14.0" layoutY="307" text="Оставить сообщений"/>
        <TextField fx:id="countMessagesForSave" layoutX="150.0" layoutY="307.0" prefHeight="25.0" prefWidth="60" />

    </children>
</AnchorPane>
